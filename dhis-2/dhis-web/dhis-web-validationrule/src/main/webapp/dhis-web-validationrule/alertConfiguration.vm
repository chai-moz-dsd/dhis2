                    <input type="radio" name="alertTime" value="2:00">
                    <input type="radio" name="alertTime" value="3:00">
                    <input type="radio" name="alertTime" value="4:00">
                    <input type="radio" name="alertTime" value="5:00">
                    <input type="radio" name="alertTime" value="6:00">
                    <input type="radio" name="alertTime" value="7:00">
                    <input type="radio" name="alertTime" value="8:00">
                    <input type="radio" name="alertTime" value="9:00">
                    <input type="radio" name="alertTime" value="10:00">
                    <input type="radio" name="alertTime" value="11:00">
                    <input type="radio" name="alertTime" value="12:00">
                    <input type="radio" name="alertTime" value="13:00">
                    <input type="radio" name="alertTime" value="14:00">
                    <input type="radio" name="alertTime" value="15:00">
                    <input type="radio" name="alertTime" value="16:00">
                    <input type="radio" name="alertTime" value="17:00">
                    <input type="radio" name="alertTime" value="18:00">
                    <input type="radio" name="alertTime" value="19:00">
                    <input type="radio" name="alertTime" value="20:00">
                    <input type="radio" name="alertTime" value="21:00">
                    <input type="radio" name="alertTime" value="22:00">
                    <input type="radio" name="alertTime" value="23:00">
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="save">
            </td>
        </tr>

    </table>

</form>

<script type="text/javascript">
    dayPicker('$viewDays');
    timePicker('$viewAlertTime');
</script>
